<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <View style="@style/divider" />

        <TextView
            android:id="@+id/title2"
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图片内英文翻译" />

        <Button
            android:id="@+id/btn_orc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图片内英文翻译" />

        <View style="@style/divider" />

        <TextView
            android:id="@+id/title3"
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="实时翻译" />

        <Button
            android:id="@+id/btn_doAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中文->英文" />

        <TextView
            android:id="@+id/tv_doAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中文->英文" />

        <Button
            android:id="@+id/btn_doAll_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="英文->中文" />

        <TextView
            android:id="@+id/tv_doAll_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="英文->中文" />

        <View style="@style/divider" />

        <Button
            android:id="@+id/btn_speak_syc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="同声" />

        <TextView
            android:id="@+id/tv_res_syc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="同声" />

        <TextView
            android:id="@+id/tv_translation_syc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="同声翻译" />

        <View style="@style/divider" />

        <TextView
            android:id="@+id/title1"
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title" />

        <Button
            android:id="@+id/btn_talk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="普通话识别" />

        <Button
            android:id="@+id/btn_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中英文翻译" />

        <Button
            android:id="@+id/btn_speak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="英文发声" />

        <TextView
            style="@style/hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="识别结果:" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="翻译结果:" />

        <TextView
            android:id="@+id/tv_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/divider" />

        <Button
            android:id="@+id/btn_speak_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="切换" />

        <TextView
            android:id="@+id/tv_res_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="识别" />

        <TextView
            android:id="@+id/tv_translation_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="翻译" />
    </LinearLayout>

</ScrollView>
